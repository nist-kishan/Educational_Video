# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# ============================================
# DATABASE - SUPABASE
# ============================================
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# AUTHENTICATION - JWT
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# COOKIES
# ============================================
COOKIE_SECRET=your_cookie_secret_here_minimum_32_characters

# ============================================
# EMAIL SERVICE - BREVO
# ============================================
BREVO_API_KEY=xsmtpsib-your_brevo_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Educational Video Platform

# ============================================
# FILE STORAGE - CLOUDINARY
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SECURITY
# ============================================
BCRYPT_SALT_ROUNDS=12

# ============================================
# PAYMENT GATEWAY - RAZORPAY
# ============================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# PAYMENT GATEWAY - STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================
# PAYMENT GATEWAY - PAYPAL (Optional)
# ============================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ============================================
# EMAIL SERVICE - SENDGRID (Alternative)
# ============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# EMAIL SERVICE - NODEMAILER (Alternative)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# PDF GENERATION
# ============================================
PDF_GENERATOR=pdfkit
PDF_FONT_PATH=./fonts/

# ============================================
# REAL-TIME MESSAGING - SOCKET.IO
# ============================================
SOCKET_IO_ENABLED=true
SOCKET_IO_PORT=3001
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# ============================================
# REDIS (Optional - for caching & sessions)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=2147483648
MAX_VIDEO_DURATION=3600
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mpeg,mkv,webm

# ============================================
# UPLOAD DIRECTORIES
# ============================================
UPLOADS_DIR=./uploads
TEMP_DIR=./temp
CERTIFICATES_DIR=./certificates

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_SECRET=your_session_secret_minimum_32_characters
SESSION_TIMEOUT=86400000

# ============================================
# API CONFIGURATION
# ============================================
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT_ENABLED=true

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_REVIEWS_ENABLED=true
FEATURE_ASSIGNMENTS_ENABLED=true
FEATURE_CERTIFICATES_ENABLED=true
FEATURE_BOOKMARKS_ENABLED=true
FEATURE_NOTES_ENABLED=true
FEATURE_COMMENTS_ENABLED=true
FEATURE_FORUM_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ADMIN_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS_ENABLED=true
FEATURE_INVOICES_ENABLED=true
FEATURE_MESSAGING_ENABLED=true

# ============================================
# EXTERNAL SERVICES
# ============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ============================================
# DEVELOPMENT ONLY
# ============================================
DEBUG=true
MOCK_PAYMENTS=false
SEED_DATABASE=false
